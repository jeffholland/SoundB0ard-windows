let start_gen = gen()
{
  setup()
  {
    #let ptz = [1, 1.2, 0.7, 2];
    let ptz = [0.6, 0.8, 0.7, 1];
    let ptx = 0;
  }
  run()
  {
    set rhy:stutter 1;
    if (count % 2 == 0) {
      set poi:scramble 1;
      note_on(axf,1 );
      set hb:pitch ptz[ptx];
      set axf:pitch ptz[ptx];
      set yeahman:pitch ptz[ptx];
      ptx = incr(ptx, 0, len(ptz));
      set yeahman:scramble 1;
    }
    if (count % 3 == 0) {
      set poi:stutter 1;
      set yeahman:stutter 1;
      set hb:stutter 1;
      ###set nloop:scramble 1;
      set turnit:scramble 1;
      #set bsa:scramble 1;
      set gd:scramble 1;
      set yoyo:stutter 1;
    }
    if (count % 4 == 0) {
      set acid:scramble 1;
      set gd:stutter 1;
      set iget:stutter 1;
      set sb:stutter 1;
      set bsa:stutter 1;
      set rhy:scramble 1;
      set yoyo:pitch ptz[ptx];
    }
  }
}

let hhblah_gen = gen()
{
  setup()
  {
    let swing = 20;
  }
  run()
  {
    for (i = 0; i < 16; ++i) {
      let offset = 0;
      if (i % 2 == 1) {
        offset = swing;
      }
      note_on_at(hh, 1, i*pp + offset);

      if (i % 3 == 0) {
        note_on_at(bsa, 1, i*pp);
      }
      if (i % 4 == 0) {
        set bsa:active 1;
      }
    }
  }
}

