let rf = riff(20);

let bd = sample(bd/808Kkick.wav)

let blah_gen = gen()
{
  setup()
  {
    let lenz = [3, 5, 7];
    let lx = 0;
  }
  run()
  {
    #play_array(bd2, [1, 1, 1, 1]);
    if (count % 4 == 0) {
      play_array(mo, rf);
    }
    if (count % 3 == 0) {
      play_array(mo, rotate(rf, lenz[lx]));
      play_array(autl, rotate(rf, lenz[lx] + 3), dur = pp*5);
    }
    play_array(bd2, bjork(lenz[lx],16));

    if (count % 4 == 0) {
      lx = incr(lx, 0, len(lenz));
    }

  }
}

let drum_gen = gen()
{
  setup()
  {
    let beat = gen_beat();
    let idxr = 3;
    let idx = 0;
  }
  run()
  {
    play_array(bd, beat);

    if (count % 3 == 0) {
      beat = gen_beat();
    }
    # let rf = riff(23);
    # dx = DxSynth(beleep) vol:0.70 pan:0.00 algo:5
    # dx2 = DxSynth(detruit) vol:0.70 pan:0.00 algo:5
    if (count % 2 == 0) {

      for (i = 0; i < 16; ++i) {
        stepper(mo, rf, idx, i);
        if (count % 4 == 0) {
          stepper(dx, down(rotate(rf, idx % 7), idx % 2), idx, i);
        }
        if (count % 3 == 0) {
          stepper(dx2, rotate(rf, idx),  2, i);
        }
        idx = incr(idx, 0, idxr);
      }
      idxr = incr(idxr, 0, 16);
    }

  }
}

