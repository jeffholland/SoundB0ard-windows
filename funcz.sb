let incr = fn(num, min, max)
{
    let num = ++num; 
    if (num == max || num > max) { num = 0 + min; }
    return num
}


let simple = gen() {
	setup() {
		#let notes = ["b2", "a0", "f0", "g0"];
		let notes = ["c2", "c0", "c1", "g0"];
		let idx = 0;

	}

	run() {
		let pattern = "";
		for (i = 0 ; i < 3; ++i) {
			pattern = pattern + notes[idx] + "*3 ";
			idx = incr(idx, 0, len(notes));
		}
		if (rand(10) > 2) {
			pattern = pattern + "f1*13 ";
		}

		return pattern;
	}
}
